@model PI.Domain.ViewModel.Enterprise.AmountOfMachinesStatusByEnterpriseViewModel

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VisuData</title>

    <!-- Icone da aba -->
    <link rel="shortcut icon" href="/assets/Img/favicon-white.ico" type="image/x-icon" />

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" href="~/assets/Icons/bootstrap-icons/bootstrap-icons.css">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>

    <!-- CSS -->
    <link rel="stylesheet" href="~/assets/styles/home.css">
    <link rel="stylesheet" href="~/assets/styles/create.css">

    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/dfbf29b648.js" crossorigin="anonymous"></script>
</head>

<header class="navbar header p-2">
    <div class="container-fluid">
        <a class="navbar-brand name-app" href="#">
            <img src="~/assets/Img/Logo-branco.png" alt="Logo" width="70" height="60" class="d-inline-block align-text-center">
            VisuData
        </a>
    </div>
</header>


<main>
    <!-- Container Status maquinas -->
    <div class="container-cards" id="status-container">
        <h3> Visão Geral</h3>
        <!-- Content dos status-->
        <div class="row row-cols-2 row-cols-md-4 g-3 visao-card categories-group">
            <!-- Bom estado -->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-primary shadow-lg h-100 py-2" style="border-left-color: #0d9b5b;">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <a asp-action="GetMachineForStatus" asp-route-status="Bom" asp-controller="Machine" class="text-decoration-none text-dark">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-uppercase mb-1">
                                        Funcionando
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold ">@Model.AmountOfGoodStateMachines</div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Em alerta -->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-success shadow-lg h-100 py-2" style="border-left-color: #f6c23e;">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <a asp-action="GetMachineForStatus" asp-route-status="Atênção" asp-controller="Machine" class="text-decoration-none text-dark">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-uppercase mb-1">
                                        Funcionando Em alerta
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.AmountOfWarningStateMachines</div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Estado crítico -->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-info shadow-lg h-100 py-2" style="border-left-color: #e74a3b;">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <a asp-action="GetMachineForStatus" asp-route-status="Crítico" asp-controller="Machine" class="text-decoration-none text-dark">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-uppercase mb-1">
                                        Em estado crítico
                                    </div>
                                    <div class="row no-gutters align-items-center">
                                        <div class="col-auto">
                                            <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">@Model.AmountOfCriticalStateMachines</div>
                                        </div>
                                        <!-- Caso queira colocar icones -->
                                        <!-- <div class="col">
                                        </div> -->
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Total de maquinas -->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-warning shadow-lg h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <a asp-action="List" asp-controller="Machine" class="text-decoration-none text-dark">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-uppercase mb-1">
                                        Todas as maquinas
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.AmountOfMachines</div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="container-categories container-fluid mb-4" id="categorias-container">
        <h3>Categorias</h3>
        <div class="row row-cols-2 row-cols-md-4 g-3 categories-group align-items-stretch">
            <div class="col d-flex">
                <div class="card rounded-3 w-100 ">
                    <div class="card-body text-center text-div">
                        <a asp-controller="Machine" asp-action="GetMachinesForSpecificCategory" asp-route-nameOfCategory="Motores"><p class="text-light mb-0">Motores</p></a>
                    </div>
                </div>
            </div>
            <div class="col d-flex ">
                <div class="card rounded-3 w-100 ">
                    <div class="card-body text-center text-div">
                        <a asp-controller="Machine" asp-action="GetMachinesForSpecificCategory" asp-route-nameOfCategory="Injetoras"><p class="text-light mb-0">Injetoras</p></a>
                    </div>
                </div>
            </div>
            <div class="col d-flex ">
                <div class="card rounded-3 w-100 ">
                    <div class="card-body text-center text-div">
                        <a asp-controller="Machine" asp-action="GetMachinesForSpecificCategory" asp-route-nameOfCategory="Sensores"><p class="text-light mb-0">Sensores</p></a>
                    </div>
                </div>
            </div>
            <div class="col d-flex ">
                <div class="card rounded-3 w-100 ">
                    <div class="card-body text-center text-div">
                        <a asp-controller="Machine" asp-action="GetMachinesForSpecificCategory" asp-route-nameOfCategory="Extratoras"><p class="text-light mb-0">Extratoras</p></a>
                    </div>
                </div>
            </div>
            <div class="col d-flex ">
                <div class="card rounded-3 w-100 ">
                    <div class="card-body text-center text-div">
                        <a asp-controller="Machine" asp-action="GetMachinesForSpecificCategory" asp-route-nameOfCategory="Empilhadeiras"><p class="text-light mb-0">Empilhadeiras</p></a>
                    </div>
                </div>
            </div>
            <div class="col d-flex ">
                <div class="card rounded-3 w-100 ">
                    <div class="card-body text-center text-div">
                        <a asp-controller="Machine" asp-action="GetMachinesForSpecificCategory" asp-route-nameOfCategory="Exteiras"><p class="text-light mb-0">Esteiras</p></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</main>
    <footer>
    <nav class="nav fixed-bottom nav-fill" id="navbar">
            <li class="nav-item" id="home_button">
                <a class="btn me-2 " asp-action="Home" asp-controller="Enterprise"> <i class="icone bi bi-house-door text-light"></i> </a>
            </li>
            <li class="nav-item " id="create_button">
                <a class="btn  me-2" asp-action="Add" asp-controller="Machine"><i class="bi bi-plus-circle text-light icone"></i> </a>
            </li>
            <li class="nav-item" id="list_button">
                <a class="btn  me-2" asp-action="List" asp-controller="Machine"><i class="bi bi-list-ul text-light icone"></i></a>
            </li>
            <li class="nav-item" id="profile_button">
                <a class="btn  me-2" asp-action="Menu" asp-controller="Enterprise"><i class="bi bi-person text-light icone"></i></a>
            </li>

        </nav>
    </footer>
<script>
    window.onload = teste;

    function teste() {
        let botao = document.getElementById('botaoVoltar');
        botao.setAttribute("hidden", "hidden");
    }
</script>
