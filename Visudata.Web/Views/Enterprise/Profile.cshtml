@using PI.Web.ViewModel.Enterprise;
@model EnterpriseProfileViewModel
@{
    Layout = "_Layout";
}
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/assets/styles/profile.css">
    <title>Perfil do usuário</title>

</head>
<body>
    <header>
        <div class="container d-flex justify-content-center">
            <img src="~/assets/Img/logo-visu.png" class="logo" style="width:80%" alt="logo" />
        </div>
    </header>

    <div class="container">
        <div class="row">
            <div class="col-sm-6 offset-sm-3" id="formulario">
                <div class="mb-2">
                    <label for="empresa"><b>Empresa</b></label>
                    <input class="form-control" type="text" name="empresa" value="@Model.FantasyName" disabled />
                </div>

                <div class="mb-2">
                    <label for="setor"><b>Setor</b></label>
                    <input class="form-control" value="@Model.Sector" disabled />
                </div>

                <div class="row g-3 mb-2">
                    <div class="col-6">
                        <label for="estado"><b>Estado</b></label>
                        <input class="form-control" type="text" value="@Model.State" disabled />
                    </div>
                    <div class="col-6">
                        <label for="cidade"><b>Cidade</b></label>
                        <input class="form-control" value="@Model.City" type="text" disabled />
                    </div>
                </div>

                <div class="mb-2">
                    <label class="form-label" for="endereco"><b>Endereço</b></label>
                    <input class="form-control" type="text" name="endereco" value="@Model.Address" disabled />
                </div>
            </div>
        </div>
    </div>





    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
</body>
