@using PI.Web.ViewModel.UserSupport;
@model AddUserSupportViewModel

@{

    Layout = "_Layout";
}

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/assets/styles/support.css">
    <style>

        .nav-scroller .nav {
            display: flex;
            flex-wrap: nowrap;
            padding-bottom: 1rem;
            margin-top: -1px;
            overflow-x: auto;
            text-align: center;
            white-space: nowrap;
            -webkit-overflow-scrolling: touch;
        }
    </style>
    <link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <title>Suporte técnico</title>
</head>

<body>

    <!-- menu superior -->
    <header>
        <div class="container" id="logo">
            <img src="~/assets/icons/Logo.svg" alt="logo">
        </div>
    </header>
    <div hidden>
        <input value="@TempData["enterpriseId"]" asp-for="EnterpriseId" />
    </div>
    <main>
        <form class="container" asp-action="Support" asp-controller="Enterprise" method="post">
            <div class="col-md-7 col-lg-8">
                <h2 class="mt-4"></h2>
                <h3 class="mb-4"><strong>Suporte Técnico</strong></h3>
                <div class="forms">
                    <div class="row g-3">
                        <div class="col-sm-6">
                            <label for="company" class="form-label">Empresa</label>
                            <input type="text" class="form-control" asp-for="NameOfEnterprise" value="@Model.NameOfEnterprise" id="company" disabled required>
                        </div>
                        <div class="col-sm-6">
                            <label for="email" class="form-label">E-mail do representante</label>
                            <input type="text" asp-for="RepresentativeEmailAddress" class="form-control" id="email" required>
                            <span asp-validation-for="RepresentativeEmailAddress"></span>
                        </div>
                        <div class="col-sm-5">
                            <label for="category" class="form-label">Categoria</label>
                            <select class="form-select" asp-for="ProblemsCategoryName">
                                <option selected>Selecione uma opção</option>
                                @foreach (string item in ViewBag.userProblemsCategoriesAsString)
                                {
                                    <option value="@item">@item</option>
                                }
                            </select>
                            <span asp-validation-for="ProblemsCategoryName"></span>
                        </div>
                        <div class="mb-3">
                            <label for="exampleFormControlTextarea1" class="form-label">
                                Detalhe o
                                problema
                            </label>
                            <textarea class="form-control" asp-for="ProblemDescription" id="exampleFormControlTextarea1" rows="6"
                                      style="margin-bottom: 10px;" required></textarea>
                            <span asp-validation-for="ProblemDescription"></span>
                            <button class="mt-3 w-100 btn btn-primary btn-lg" type="submit" id="sendButton">Enviar</button>

                        </div>
                    </div>
                </div>
            </div>
        </form>
    </main>

    <!-- Navbar/Menu navegação -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
            crossorigin="anonymous"></script>
</body>
