@using PI.Domain.ViewModel.Machine;
@model List<RegisterMachineLogsViewModel>
@{
    Layout = "_Layout";
}
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VisuData</title>
    <link rel="stylesheet" href="~/assets/styles/registro.css">
</head>

<body>
    <header>
        <div class="row header">
            <div class="col-8">
                <p>Registro de Maquinas</p>
            </div>
        </div>

    </header>
    <main>
        @if (Model.Count() > 0)
        {
            foreach (RegisterMachineLogsViewModel machineLogRegister in Model)
            {
                <div class="container-fluid mb-5">
                    <div class="card tabel-card-header">
                        <div class="card-header text-center tabel-text">
                            <div class="nav nav-tabs card-header-tabs">
                                <p class="col " style="margin-left: -8px;">Data</p>
                                <p class="col " style="margin-left: -8px;">Hora</p>
                                <p class="col ">Vibração</p>
                                <p class="col ">Ruído</p>
                                <p class="col " style="margin-right: 2%;">Temperatura</p>
                            </div>
                        </div>
                    </div>

                    <!-- Card das informações -->
                    <div class="card card-infos text-center ">
                        <div class="card-body d-flex justify-content-around">
                            <p class="col-2 timeDate">@machineLogRegister.DateAsString</p>
                            <p class="col-2 timeDate">@machineLogRegister.HourAsString</p>
                            <div class="col-3 row containers-values">
                                <p class="col" style="margin-right: -50%;">@machineLogRegister.Vibration.ToString()</p>
                                <p class="col">Hz</p>
                            </div>
                            <div class="col-3 row containers-values">
                                <p class="col" style="margin-right: -50%;">@machineLogRegister.Noise.ToString()</p>
                                <p class="col">dB</p>
                            </div>
                            <div class="col-3 row containers-values" style="margin-right: -4px;">
                                <p class="col" style="margin-right: -50%;">@machineLogRegister.Temp.ToString()</p>
                                <p class="col">ºC</p>
                            </div>
                        </div>
                    </div>
                </div>
            }

        }
        else
        {
            <div class="container">
                <h2>Não há nenhum registro dessa máquina no sistema!</h2>
            </div>
        }

    </main>

</body>
